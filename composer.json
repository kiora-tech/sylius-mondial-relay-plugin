{
    "name": "kiora/sylius-mondial-relay-plugin",
    "description": "Mondial Relay pickup point shipping integration for Sylius 2",
    "type": "sylius-plugin",
    "license": "MIT",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "mondial-relay",
        "shipping",
        "pickup-point",
        "e-commerce"
    ],
    "authors": [
        {
            "name": "Kiora",
            "homepage": "https://kiora.tech"
        }
    ],
    "require": {
        "php": "^8.2",
        "sylius/sylius": "^2.0",
        "symfony/cache": "^7.0",
        "symfony/http-client": "^7.0",
        "endroid/qr-code": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-doctrine": "^1.5",
        "phpstan/phpstan-symfony": "^1.4",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^10.5",
        "symfony/browser-kit": "^7.0",
        "symfony/debug-bundle": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/flex": "^2.4",
        "symfony/intl": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Kiora\\SyliusMondialRelayPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiora\\SyliusMondialRelayPlugin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "require": "^7.0"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
